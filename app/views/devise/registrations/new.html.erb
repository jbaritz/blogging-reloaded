
<div class="signin-title-splash large-offset-2 large-8 columns">
<div style="font-weight: bold">PillowFort</div>
  <p style="font-size: 50%">Welcome to everything you love.</p>
</div>


<div class="signin-float large-offset-4 large-4 columns">
<h5 style="text-align: center">Sign up</h5>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix">email</span>
      </div>
      <div class="small-9 large-10 columns">
        <input autocomplete="off" type="text" name="user[email]" id="user_email">
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix">username</span>
      </div>
      <div class="small-9 large-10 columns">
        <input type="text" name="user[username]" id="user_username">      
      </div>
    </div>
  </div>

    <div class="field">
    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix">password</span>
      </div>
      <div class="small-9 large-10 columns">
       <input autocomplete="off" type="password" name="user[password]" id="user_password">
      </div>
    </div>
  </div>

    <div class="field">
    <div class="row collapse">
      <div class="small-3 large-2 columns">
        <span class="prefix">confirm pw</span>
      </div>
      <div class="small-9 large-10 columns">
          <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation">     
      </div>
    </div>
  </div>

  <div class="actions" style="text-align: center">
    <%= f.submit "sign up", class: "button small" %>
  </div>
  <% end %>

</div>

<div class="signin-bg-images">

    <%= image_tag "signin-bg-3.jpg" %>

</div>








