<h1><%= @user.username %></h1>

<% @posts.each do |post| %>
	<h3><%= post.title %></h3><br>
	<h2><%= post.content %></h3><br>
	<% if post.is_a? UserPicturePost %>
	<img src="<%= post.image_url %>"></img>
	<% end %>
	<% if post.is_a? UserVideoPost %>
		<% if post.vid_type == "youtube" %>
			<div class="flex-video">
        		<iframe width="420" height="315" src="//www.youtube.com/embed/<%= post.video_url %>" frameborder="0" allowfullscreen></iframe>
			</div>
		<% elsif post.vid_type == "vimeo" %>
			<div class="flex-video">
        		<iframe src="http://player.vimeo.com/video/<%= post.video_url %>" width="400" height="225" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
			</div>
		<% end %>
	<% end %>
<% end %>