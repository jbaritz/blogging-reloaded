<div class="new-post-form">

<h3>Create a new text post</h3>


<%= form_tag("/posts/text", method: "post") do %>
	Post to:
	<%= select("post-to-options", "selected") do %>
	 <% @target_options.each do |t|%>
	  <%=  content_tag(:option, t.name, value: t.id.to_s + "-" + t.class.to_s )%>
	 <% end%>
	<% end %>
 	 <%= text_field_tag(:'title', nil, placeholder: "title") %>
	 <%= quill_editor 'content'%>
	 <%= text_field_tag(:'tags',nil, placeholder: "tags (separated by commas!)") %>
  <%= submit_tag("submit", class: "button") %>
  <% end %>
  </div>

<script type="text/javascript">
	$(document).ready(function(){
		$('#full-editor').css('height', '400px');

	})	

</script>