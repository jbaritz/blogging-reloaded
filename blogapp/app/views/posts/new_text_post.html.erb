
<h3>Create a new text post</h3>
<%= form_tag("/new-text-post", method: "post") do %>
 	 <%= text_field_tag(:'new-post-title', nil, placeholder: "title") %>
 	 <%= text_area_tag(:'new-text-content',nil, placeholder: "post") %>
	 <%= text_field_tag(:'new-text-tags',nil, placeholder: "tags") %>
  <%= submit_tag("submit") %>
<% end %>
