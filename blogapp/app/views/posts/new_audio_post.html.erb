
<h3>Create a new audio post</h3>
<%= form_tag("/posts/audio", method: "post") do %>
 	 <%= text_field_tag(:'title', nil, placeholder: "title") %>
 	 <%= text_field_tag(:'audio_url', nil, placeholder: "audio URL") %>
 	 <%= text_area_tag(:'content',nil, placeholder: "caption") %>
	 <%= text_field_tag(:'tags',nil, placeholder: "tags") %>
  <%= submit_tag("submit") %>
<% end %>
