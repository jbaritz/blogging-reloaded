</div>
<button type='submit'>Show more posts</button>


<script type="text/javascript" src="../assets/convert.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
<script type="text/template" class="op-text-temp">
	<div id="blog">
	<div class="post-header">
		<div class="post-citation">
			<a href="/{{= user }}">{{= user }}</a> posted:
		</div>
		<div class="post-title">
			{{= title }}
		</div>
	</div>
	<div class="post-body">
		{{= content }}
	</div>
	<div class="post-nav">
		<div class="post-nav-left">
			<a href="/{{= user }}/posts/{{= id }}"><i class="fa fa-comments fa-lg"></i></a> (<a href="/" class="min-text">0</a>) <a href='/reblogs/op/{{= id }}/confirm'>  <i class="fa fa-refresh fa-lg"></i></a><br>
		</div>
		{{if (<%= current_user.id%> === user.id  ) { }}
		<div class="post-nav-right">
			<a href="/posts/:id/edit"><i class="fa fa-pencil-square-o fa-lg"></i></a> <a href="/posts/:id/delete"><i class="fa fa-times fa-lg"></i></a>			
		</div>
		{{ } }}
	</div>
	{{ if (tags.length > 0) { }}
	<div class="tags-container">
		<div class="tags">
			Tags: {{ _.each(tags, function(tag, i){ }}
				{{ if(i == tags.length - 1){ }}
				<a href='{{= tag }}'> {{= tag }} </a>
				{{ } else { }}
				<a href='{{= tag }}'> {{= tag }}</a>,
			{{ } }) }}
		</div>
	</div>
	{{ } }}
	</div>
</script>

